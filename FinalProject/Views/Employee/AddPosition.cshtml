@model ServiceLayer.ViewModels.PositionModel


@{
    ViewData["Title"] = "AddPosition";
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="AddPosition">
            <div class="card">
                <div class="card-body">
                    <h1>Add New Position</h1>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="PositionName" class="control-label"></label>
                        <input asp-for="PositionName" class="form-control" />
                        <span asp-validation-for="PositionName" class="text-danger"></span>
                    </div><br />
                </div>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Add Position" class="btn btn-success" />
            </div><br />
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
