@model ServiceLayer.ViewModels.EmployeeHistoryViewModel

@{
    ViewData["Title"] = "UpdateEmployee History";
}
<style>
    label{
        font-weight:700;
    }
</style>

<h1>Update Employee History</h1>


<div class="row">
    <div class="col-md-12">
        <form asp-action="UpdateEmployeeHistory" asp-route-empId = "@ViewBag.EmployeeId">
            <div class="card">
                <div class="card-body">
                    <h4>Employee History Details</h4>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input asp-for="EmployeeHistoryId" class="form-control" type="hidden" />
                    </div>
                    <div class="form-group">
                        <input asp-for="EmployeeId" class="form-control" type="hidden" />
                    </div>
                    <div class="form-group">
                        <input asp-for="PositionId" class="form-control" type="hidden" />
                    </div>

                    <div class="form-group">
                        <label asp-for="StartDate" class="control-label"></label>
                        <input asp-for="StartDate" class="form-control" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div><br />

                    <div class="form-group">
                        <label asp-for="EndDate" class="control-label"></label>
                        <input asp-for="EndDate" class="form-control" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div><br />
                        </div>
                    </div>

            <div class="form-group">
                <input type="submit" value="Update Employee History" class="btn btn-success" />
            </div><br />
        </form>
    </div>
</div>

<div>
    <a asp-action="ViewJobHistory" asp-route-employeeId="@ViewBag.EmployeeId" class="btn btn-secondary">Back to History</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

